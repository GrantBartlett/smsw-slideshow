nav.main
  background: brand-primary
  margin: -16px
  height: 100px
  z-index: 1
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26)
  font-size: 24px
  line-height: 100px
  h1
    margin: 0
    width: 100px
    height: 100px
    float: left
    a
      display: block
      text-decoration: none
      img
        width: 60px
        margin: 24px
        border: none
  ul 
    padding-left: 0
    margin: 0
    margin-left: -5px
    list-style: none
    li
      display: inline-block
      padding-right: 5px
      padding-left: 5px 
      a
        text-decoration: none
        padding: 8px 12px
        &:hover
          background-color: lighten(brand-primary, 5%)
