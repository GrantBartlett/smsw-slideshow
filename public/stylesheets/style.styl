@import 'nib'
@import 'reveal.css'
@import 'reveal.theme.black.css'

// Colours
background-colour = #444
pink = #fd02b5
blue = #5ecef2

html
  height 100%

body
  background background-colour
  color black

.reveal
  p, ul, ol, body, table
    font-weight 200 !important
    font-family "jubilat" !important
    line-height 1.5
  .slide-background
    background-position center center !important

h1,h2, h3, h4, h5, h6
  font-family "jubilat", Helvetica, Arial, sans-serif !important
  font-weight 900 !important
  text-transform inherit !important

a 
  color #fff
  transition color .2s linear
  &:hover
    color #eee

section.main
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26) inset
  
@require '_slide_nav'
@require '_home'
@require '_doors'

.the-management-suite
.the-factory-floor
.the-creative-lab
.the-innovation-hub
.the-ideas-dept
  h1,h2,h3,h4,h5,h6,p,ul,ol,table
    color black

.biscuit
  background black
  position fixed
  top 0
  right 0
  width 50px
  height 2px
  opacity 0.3
  &:after
    display none
    width 50px
    height 50px

@media screen and (min-width : 320px)
  .biscuit
    background red
    &:after
      content "320"

@media screen and (min-width : 480px)
  .biscuit
    background blue
    &:after
      content "480"

@media screen and (min-width : 768px)
  .biscuit
    background purple
    &:after
      content "768"
    
@media screen and (min-width : 992px)
  .biscuit
    background olive
    &:after
      content "992"
    
@media screen and (min-width : 1200px)
  .biscuit
    background yellow
    &:after
      content "1200"
